{
  "info": {
    "name": "IoT Dashboard - Sensor Data Simulation",
    "description": "Collection for simulating IoT sensor data and inserting into Supabase",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Insert IoT Event",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// See postman_prerequest_script.js for the complete pre-request script code"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "apikey",
            "value": "{{SUPABASE_ANON_KEY}}",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{SUPABASE_ANON_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Prefer",
            "value": "return=representation",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"device_id\": \"{{device_id}}\",\n  \"type\": \"{{sensor_type}}\",\n  \"value\": {{sensor_value}},\n  \"status\": \"{{device_status}}\",\n  \"metadata\": {{sensor_metadata}}\n}"
        },
        "url": {
          "raw": "{{SUPABASE_URL}}/rest/v1/iot_events",
          "host": [
            "{{SUPABASE_URL}}"
          ],
          "path": [
            "rest",
            "v1",
            "iot_events"
          ]
        }
      }
    },
    {
      "name": "Get IoT Events",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "apikey",
            "value": "{{SUPABASE_ANON_KEY}}",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{SUPABASE_ANON_KEY}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{SUPABASE_URL}}/rest/v1/iot_events?select=*&order=created_at.desc&limit=50",
          "host": [
            "{{SUPABASE_URL}}"
          ],
          "path": [
            "rest",
            "v1",
            "iot_events"
          ],
          "query": [
            {
              "key": "select",
              "value": "*"
            },
            {
              "key": "order",
              "value": "created_at.desc"
            },
            {
              "key": "limit",
              "value": "50"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "SUPABASE_URL",
      "value": "https://itvndvydvyckxmdorxpd.supabase.co"
    },
    {
      "key": "SUPABASE_ANON_KEY",
      "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Iml0dm5kdnlkdnlja3htZG9yeHBkIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTY1ODkyMDcsImV4cCI6MjA3MjE2NTIwN30.vmcvzz67gQ6WWBg1ZrF9I4pVJ2c-hYmyf-B6PmCOwY4"
    }
  ]
}
